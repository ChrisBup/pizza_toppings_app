<div class="main">
  <h1 class='center'><%= @pizza.name %></h1>

  <img src='<%= @pizza.url %>'

  <br>

  <ul>
    <% @pizza.toppings.each do |topping| %>
    <li><%= topping.name %></li>
    <a href="/pizzas/<%= @pizza.id %>/toppings/<%= topping.id %>/edit">Add Topping</a>
    <% end %>
  </ul>

  <h2 class='center'>diameter: <%= @pizza.diameter %></h2>

  <form class='center' action="/pizzas/<%= @pizza.id %>/edit" method='get'>
    <%= token_tag%>
    <button type='submit'>Edit Pizza</button>
  </form>

  <form class='center' action="/pizzas/<%= @pizza.id %>" method='post'>
    <input type="hidden" name='_method' value='delete'>
    <%= token_tag %>
    <button type='submit'>Eat Pizza</button>
  </form>
</div>
